<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ando" >

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:src="@android:drawable/ic_menu_revert" />

                <ImageView
                    android:id="@+id/imageson1"
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="130dp"
                    android:clickable="true"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageson2"
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="130dp"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff0000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff0000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ff000000"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A quel pays appartient ce drapeau :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="139dp"
            android:layout_weight="0.00"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="Reponse1" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="Reponse2" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="Reponse3" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="Reponse4" />
            </TableLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="124dp"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/editbox_background_normal" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <Button
                android:id="@+id/commencer"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:height="80dp"
                android:text="COMMENCER"
                android:visibility="visible" />

            <Button
                android:id="@+id/valider"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:height="80dp"
                android:text="VALIDER"
                android:visibility="gone" />

            <Button
                android:id="@+id/quitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUITTER"
                android:visibility="gone" />

            <Button
                android:id="@+id/recommencer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECOMMENCER"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>