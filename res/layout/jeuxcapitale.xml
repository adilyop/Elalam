<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ando"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="87dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="89dp" >

                <ImageView
                    android:id="@+id/imagejeuxcap"
                    android:layout_width="87dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="-10dp"
                    android:src="@android:drawable/ic_menu_revert" />

                <ImageView
                    android:id="@+id/imageson2"
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imageson1"
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:clickable="true"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SCORE :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffff0000" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffff0000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.12"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ff000000"
                    android:gravity="center"
                    android:text="QUESTION ?"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:text="Reponse1" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:text="Reponse2" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:text="Reponse3" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:text="Reponse4" />
            </TableLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="VALIDER"
                android:visibility="gone" />

            <Button
                android:id="@+id/button4"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="COMMENCER"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="127dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:height="80dp"
                    android:text="QUITTER"
                    android:visibility="gone"
                    android:width="200dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="124dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:height="80dp"
                    android:text="RECOMMENCER"
                    android:visibility="gone"
                    android:width="200dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>